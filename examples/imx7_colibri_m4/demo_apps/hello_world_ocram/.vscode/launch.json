{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "J-Link Debug hello_world_ocram.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink",
            "device": "MCIMX7D5_M4",
            "cwd": "${workspaceRoot}",
            "executable": "armgcc/debug/hello_world_ocram.elf",
            "runToMain": true,
            "postLaunchCommands": [
                "flush regs",
                "load"
            ],
            "postRestartCommands": [
                "flush regs",
                "load"
            ]
        },
        {
            "name": "OpenOcd Debug hello_world_ocram.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "executable": "armgcc/debug/hello_world_ocram.elf",
            "runToMain": true,
            "configFiles": [
                "interface/ftdi/olimex-arm-usb-ocd-h.cfg",
                "target/imx7_m4.cfg"
            ]
        }
    ]
}