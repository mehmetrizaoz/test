{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "J-Link Debug i2c_interrupt_sensor_imx7d.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink",
            "device": "MCIMX7D5_M4",
            "cwd": "${workspaceRoot}",
            "executable": "armgcc/debug/i2c_interrupt_sensor_imx7d.elf",
            "runToMain": true,
            "postLaunchCommands": [
                "flush regs",
                "load"
            ],
            "postRestartCommands": [
                "flush regs",
                "load"
            ]
        },
        {
            "name": "OpenOcd Debug i2c_interrupt_sensor_imx7d.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "executable": "armgcc/debug/i2c_interrupt_sensor_imx7d.elf",
            "runToMain": true,
            "configFiles": [
                "interface/ftdi/olimex-arm-usb-ocd-h.cfg",
                "target/imx7_m4.cfg"
            ]
        }
    ]
}